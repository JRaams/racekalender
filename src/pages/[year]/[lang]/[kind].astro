---
import WeekendList from '~/components/WeekendList.astro';
import { languages, type Language } from '~/i18n/ui';
import { useTranslations } from '~/i18n/utils';
import Layout from '~/layouts/Layout.astro';
import { type Kind } from '~/types';
import raceData, { type RaceYear } from '~/utils/racedata';

const params = Astro.params;
const year = Number(params.year) as RaceYear;
const lang = params.lang as Language;
const kind = params.kind as Kind;
const t = useTranslations(lang);

const raceWeeks = raceData[year][kind] || [];

export function getStaticPaths() {
  const paths = new Array();

  Object.keys(languages).forEach((lang) => {
    Object.entries(raceData).forEach(([year, data]) => {
      Object.keys(data).forEach((kind) => {
        paths.push({ params: { lang, kind, year } });
      });
    });
  });

  return paths;
}
---

<Layout title={t('nav.title')}>
  <WeekendList {raceWeeks} />
</Layout>
